#! /usr/bin/env node
var account = 'lge88';
var baseUrl = 'https://github.com/' + account + '/';
var pkgs = process.argv.slice( 2 );
var commands = [];

pkgs.forEach( function( p ) {
  commands.push( 'npm install git+' + baseUrl + p + '.git' );
  commands.push( 'component install ' + account + '/' + p );
});

commands = commands.join( '\n' );
console.log( commands );
