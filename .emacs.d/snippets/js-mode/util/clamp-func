# -*- mode: snippet -*-
# name: function clamp( a, b )
# key: clampfunc
# --
function clamp( a, b ) {
  if ( a > b ) {
    var tmp = b;
    b = a;
    a = tmp;
  }

  return function( x ) {
    if ( x < a ) {
      return a;
    } else if ( x > b ) {
      return b;
    } else {
      return x;
    }
  }
}$0