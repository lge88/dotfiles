# -*- mode: snippet -*-
# name: function now
# key: nowfun
# --
function now() {
  var d = new Date();
  var out = [
   1 + d.getMonth(),
   d.getDate(),
   d.getHours(),
   d.getMinutes(),
   d.getSeconds()
  ].map( function( num ) {
    return ( '0' + num ).slice( -2 );
  } );
  out.unshift( '' + d.getFullYear() );
  return out;
}$0