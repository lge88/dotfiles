# -*- mode: snippet -*-
# name: function merge deep
# key: funmerge
# --
function merge(a, b) {
  if (typeof a !== "object" && typeof a !== "function") {
    throw "Can"t merge things of type other than object";
  }
  var key, val_a, val_b;
  for (key in b) {
    val_a = a[key], val_b = b[key];
    if (val_b && b.hasOwnProperty( key) ) {
      if (val_a && typeof val_a === "object") {
        merge(val_a, val_b);
      } else {
        a[key] = val_b;
      }
    }
  }
  return a;
};
