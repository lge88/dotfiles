# -*- mode: snippet -*-
# name: function makeSeq using recursion
# key: funmakeSeq
# --
function makeSeq( funcs ) {
  return funcs.reduce( function( sofar, f ) {
    return function( x ) { return f( sofar(x) ); };
  } );
}

