# -*- mode: snippet -*-
# name: function diff
# key: fundiff
# --
function diff( array, substract ) {
  substract || ( substract = function( a, b ) { return a - b; } );
  var len = array.length;
  var i, p0, p1, out = [];
  for ( i = 1; i < len; ++i ) {
    p0 = array[i-1];
    p1 = array[i];
    out.push( substract( p1, p0 ) );
  }
  return out;
}

var arr = [ 1, 2, 3, 4, 6 ];
console.log( diff( arr ) );
//[ 1, 1, 1, 2 ]
