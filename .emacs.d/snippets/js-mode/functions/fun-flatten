# -*- mode: snippet -*-
# name: function flatten tree to list deep first
# key: funflatten
# --
function flatten( tree, list ) {
  list || ( list = [] );
  tree.forEach( function( el ) {
    if ( Array.isArray( el ) ) {
      flatten( el, list )
    } else {
      list.push( el );
    }
  } );
  return list;
}

