# -*- mode: snippet -*-
# name: commander program
# key: prog
# --
prog
  .version('0.0.1')
  .usage('[options] arg1 arg2')        
  .option('-f, --flag', 'flag')
  .option('-a, --required_a <a>', 'required option a')
  .option(
    '-d, --directory [DIR]',
    [
      'Working directory',
      'default is .'
    ].join(', '),
    pwd()
  );

prog.parse(process.argv);
var args = prog.args;

$0
