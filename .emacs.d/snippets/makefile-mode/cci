# -*- mode: snippet -*-
# name: cci
# key: cci
# expand-env: ((yas/indent-line 'fixed))
# --
OUT += main

CC = clang++

LIBRARIES +=
INCLUDE_PATHS += .

CFLAGS = -Wall -g -I$(INCLUDE_PATHS)
LDFLAGS = $(LIBRARIES)

all: $(OUT)

%: %.cxx
	$(CC) $(CFLAGS) $(LDFLAGS) $< -o $@

%: %.cpp
	$(CC) $(CFLAGS) $(LDFLAGS) $< -o $@

touch:
	touch -c *.cxx *.cpp

clean:
	rm -fr $(OUT) *.dSYM *.o